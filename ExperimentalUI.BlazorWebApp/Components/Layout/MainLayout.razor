@inherits LayoutComponentBase

<FluentLayout>
    <FluentHeader>
        Experimental UI
    </FluentHeader>
    <FluentStack Class="main" Orientation="Orientation.Horizontal" Width="100%">
        <NavMenu />
        <FluentBodyContent Class="body-content">
            <div class="content">
                @Body
            </div>
        </FluentBodyContent>
    </FluentStack>
    <FluentFooter>
        <FluentLabel Typo="Typography.Body">This is the footer</FluentLabel>
        <FluentSpacer />
        <FluentLabel Typo="Typography.Body">Something else goes here</FluentLabel>
    </FluentFooter>
</FluentLayout>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>

<FluentToastProvider @rendermode="RenderMode.InteractiveServer" RemoveToastsOnNavigation="true" />
<FluentDialogProvider @rendermode="RenderMode.InteractiveServer" />
<FluentTooltipProvider />
<FluentMessageBarProvider />